<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1>掲示板作成</h1>
      <!-- ここからform_withを使う形に修正してください -->
      <%= form_with model: @board, local: true do |b| %>
        <div class="mb-3">
          <%= b.label :title, "タイトル"  %>
          <%= b.text_field :title, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= b.label :body, "本文"  %>
          <%= b.text_area :body, class: "form-control", rows: 10 %>
        </div>
        <%= b.submit '登録', class: 'btn btn-primary', data: {disable_with: '登録' }%>
      <% end %>
      <!-- ここまでform_withを使う形に修正してください -->
    </div>
  </div>
</div>