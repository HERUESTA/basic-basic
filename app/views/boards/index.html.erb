<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <% if @q %>
      <%= render partial: "shared/search_boards" %>
    </div>
  </div>
  <!-- 掲示板一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @boards.present? %>
          <%= render partial: "shared/board", collection: @boards, as: :board %>
          <%= paginate @boards %>
        <% else %>
          <p>掲示板がありません</p>
        <% end %>
        <% else %>
         P>1件もありません</p>
        <% end %>         
      </div>
      </div>
    </div>
  </div>
</div>
