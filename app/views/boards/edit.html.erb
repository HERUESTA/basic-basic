<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1>掲示板編集</h1>
      <%= form_with model: @board, local: true do |b| %>
        <%= render 'shared/error_messages', object: b.object %>
          <div class="mb-3">
            <%= b.label :title, "タイトル"  %>
            <%= b.text_field :title, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= b.label :body, "本文"  %>
            <%= b.text_area :body, class: "form-control", rows: 10 %>
          </div>
          <div class="form-group"> 
            <%= b.label :board_image, "サムネイル" %>
            <%= b.file_field :board_image, class: 'form-control mb-3', accept: 'image/*' %>
            <%= b.hidden_field :board_image_cache %>
          </div>
          <div class='mt-3 mb-3'>
            <%= image_tag @board.board_image.url, id: 'preview', size: '300x200' if @board.board_image.present? %>
          </div>  
            <%= b.submit '更新する', class: 'btn btn-primary', data: {disable_with: '登録' }%>
      </div>
        <% end %>
    </div>
  </div>
</div>