<% content_for(:title, 'ブックマーク一覧') %>
<div class="container pt-3">
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <!-- 検索フォーム -->
      <%= render partial: "shared/search_bookmarks" %>
    </div>
  </div>
  <!-- 掲示板一覧 -->
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @boards.present? %>
        <%= render partial: "shared/bookmark", collection: @boards, as: :board %>
        <% else %>
          <P>ブックマーク中の掲示板がありません</p>
        <% end %>  
      </div>
      <%= paginate @boards %>
      </div>
    </div>
  </div>
</div>