<div class="row mb-3" id="comment-form">
    <div class="col-lg-8 offset-lg-2">
      <!-- ここからform_withを使う形に修正してください -->
      <%= form_with model: [@board, @comment], local: true do |b| %>   
        <%= b.label :body, "コメント"  %>
        <%= b.text_area :body, class: "form-control mb-3", rows: "4", placeholder: "コメント" %>
        <%= b.submit "投稿", class: "btn btn-primary" %>
        <% end %>
      <!-- ここまでform_withを使う形に修正してください -->
    </div>
  </div>